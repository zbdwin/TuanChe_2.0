<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.tuancheDetial.carDetial.DetialFragment3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="团车保证"
        android:padding="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simple_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goup_pay"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="买贵陪3倍"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一亿元保证金"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goup_pay"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:text="车源保证"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="甄选本地优质4S店"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_free_group"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:text="低价保证"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优选地价4S店合作"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goup_date"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="优先提车"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="享有优先提车权"
                    android:textSize="@dimen/text_14"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/nav_icon_server_sel"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售后维权"
                    android:textColor="@color/black"
                    android:paddingBottom="2dp"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="协助解决质量问题"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goup_pay"
                android:scaleType="centerCrop"
                android:padding="3dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tv_paycontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="全国联保"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/tv_paycontext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正规4S店维修保养"
                    android:textSize="@dimen/text_12"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
