<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cityLocation.LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/img_location_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back"
            android:gravity="center_vertical"
            android:padding="14dp"
            />

        <TextView
            android:id="@+id/tv_location_now_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="当前城市"
            android:textSize="18sp"
            android:gravity="center"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    </LinearLayout>

    <com.bwf.tuanche.car_select.view.SideBar
        android:id="@+id/location_sideBar"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:background="@color/touming"
        android:layout_gravity="right|center_vertical" />

    <TextView
        android:id="@+id/location_centerHintTv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#6699ff"
        android:text="A"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="#1e000000"
        />


</FrameLayout>
