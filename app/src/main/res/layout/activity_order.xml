<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.bwf.tuanche.tuancheDetial.OrderActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/withe">
      <LinearLayout
          android:id="@+id/ll_title1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageButton
              android:id="@+id/ib_back"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:src="@mipmap/icon_back"
              android:background="@drawable/select_btn"
              android:paddingRight="15dp"
              android:paddingLeft="15dp" />
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="10dp">
              <TextView
                  android:id="@+id/tv_quicklydenglu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="快速登录"
                  android:gravity="center"
                  android:textColor="@color/withe"
                  android:background="@mipmap/round_red_left"
                  android:maxLength="13" />
              <TextView
                  android:id="@+id/tv_zhanghaodenglu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="账号登录"
                  android:textColor="@color/red"
                  android:gravity="center"
                  android:background="@mipmap/round_white_right"/>
          </LinearLayout>

      </LinearLayout>
      <View
          android:id="@+id/view"
          android:layout_below="@id/ll_title1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/simple_black"/>
      <LinearLayout
          android:layout_below="@id/view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <EditText
                  android:id="@+id/et_shuru_phone"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:hint="请输入手机号"
                  android:padding="15dp"
                  android:inputType="phone|number"
                  android:maxLength="11"
                  android:digits="1234567890"
                  android:textSize="@dimen/text_14"
                  android:drawableLeft="@mipmap/icon_reg_tel_nor"
                  android:background="@drawable/shap_edit_simple"/>
              <Button
                  android:id="@+id/bt_huoqu_yanzhenma"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="获取验证码"
                  android:enabled="false"
                  android:textColor="@color/simple_black"
                  android:background="@drawable/select_btn"/>
          </LinearLayout>

          <EditText
              android:id="@+id/et_shuru_yanzhengma"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请输入验证码"
              android:padding="15dp"
              android:textSize="@dimen/text_14"
              android:drawableLeft="@mipmap/icon_reg_key_nor"
              android:background="@drawable/shape_edit_simple_botton"/>
      <Button
          android:id="@+id/bt_denlu_yanzhen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="登录验证"
          android:textColor="@color/simple_black"
          android:enabled="false"
          android:background="@drawable/select_btn"
          android:layout_marginTop="20dp"/>

      </LinearLayout>

  </RelativeLayout>
</RelativeLayout>
