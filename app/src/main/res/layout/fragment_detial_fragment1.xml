<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.bwf.tuanche.tuancheDetial.carDetial.DetialFragment1">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_toppicture"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        fresco:placeholderImage="@mipmap/fast_cell_car_one"
        fresco:placeholderImageScaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/simple_black"
        android:paddingBottom="1dp"
        android:paddingTop="1dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="1dp"
            android:background="@android:color/white"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期已报名"
                android:paddingBottom="3dp"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:id="@+id/tv_baomingnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="@dimen/text_16"
                android:textColor="@color/chengshe"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@android:color/white"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计为团友额外"
                android:paddingBottom="3dp"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:id="@+id/tv_jieshengnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="@dimen/text_16"
                android:textColor="@color/chengshe"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
